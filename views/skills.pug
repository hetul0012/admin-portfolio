extends layout
block content
  section.card
    h1.section-title Skills
    form.grid-2(method="post", action="/admin/skills", enctype="multipart/form-data")
      .form-group
        label Name
        input(type="text", name="name", placeholder="e.g. FIGMA", required)
      .form-group
        label Level
        input(type="text", name="level", placeholder="e.g. 70%")
      .form-group
        label Icon
        input(type="file", name="icon", accept="image/*")
      .form-actions
        button.btn-primary(type="submit") + Add Skill

  if items.length
    section.card
      h2.section-subtitle Current Skills
      ul.list
        each s in items
          li.list-item
            if s.icon
              img.icon(src=s.icon, alt=s.name)
            span.badge= s.level || ''
            strong= ' ' + s.name
            form.inline(method="post", action=`/admin/skills/${s._id}/delete`)
              button.btn-danger.small(type="submit", onclick="return confirm('Delete?')") Delete
  else
    section.card
      p.muted No skills yet.
